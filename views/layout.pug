doctype html
// pug que express renderiza en html, menos código y uso del layout para página principal
// NO CAMBIAR IDENTACION O SE DESMADRA TODA LA PÁGINA
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='Hermes')
  meta(name='author' content='Global')
  title Hermes
  link(href='/vendor/fontawesome-free/css/all.min.css' rel='stylesheet' type='text/css')
  link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
  link(href='/css/sb-admin-2.min.css' rel='stylesheet')
  link(href='popupS.css' rel='stylesheet')
#wrapper
  // Sidebar - NO LE QUITES LA IDENTACION
  ul#accordionSidebar.navbar-nav.bg-gradient-primary.sidebar.sidebar-dark.accordion
    // Sidebar - Brand
    a.sidebar-brand.d-flex.align-items-center.justify-content-center(href='/hermes')
      .sidebar-brand-text.mx-3
        | Hermes
        sup Global
    // Divider - NO LE QUITES LA IDENTACION
    hr.sidebar-divider.my-0
    // Nav Item - Dashboard - NO LE QUITES LA IDENTACION
    li.nav-item.active
      a.nav-link(href='./resumen')
        i.fas.fa-fw.fa-tachometer-alt
        span Resumen
    // Divider - NO LE QUITES LA IDENTACION
    hr.sidebar-divider
    // Heading - NO LE QUITES LA IDENTACION
    .sidebar-heading
      | Hermes
    // Nav Item - Pages Collapse Menu - NO LE QUITES LA IDENTACION
    li.nav-item
      a.nav-link.collapsed(href='#' data-toggle='collapse' data-target='#collapseTwo' aria-expanded='true' aria-controls='collapseTwo')
        i.fas.fa-fw.fa-cog
        span Herramientas
      #collapseTwo.collapse(aria-labelledby='headingTwo' data-parent='#accordionSidebar')
        .bg-white.py-2.collapse-inner.rounded
          h6.collapse-header Custom Components:
          a.collapse-item(href='/camp') Campaña
          a.collapse-item(href='/consulta') Consulta
          a.collapse-item(href='https://hoaxy.iuni.iu.edu/' target="_blank") Análisis  de datos
    // Nav Item - Utilities Collapse Menu

    // Divider
    hr.sidebar-divider

  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      nav.navbar.navbar-expand.navbar-light.bg-white.topbar.mb-4.static-top.shadow
        // Sidebar Toggle (Topbar)
        button#sidebarToggleTop.btn.btn-link.d-md-none.rounded-circle.mr-3
          i.fa.fa-bars
        // Topbar Navbar
        ul.navbar-nav.ml-auto
          // Nav Item - Alerts
          // Nav Item - Messages
          .topbar-divider.d-none.d-sm-block
          // Nav Item - User Information
          li.nav-item.dropdown.no-arrow
            a#userDropdown.nav-link.dropdown-toggle(role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              span.mr-2.d-none.d-lg-inline.text-gray-600.small Sesi&oacute;n
            // Dropdown - User Information
            .dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby='userDropdown')
              a.dropdown-item(href='#' data-toggle='modal' data-target='#logoutModal')
                i.fas.fa-sign-out-alt.fa-sm.fa-fw.mr-2.text-gray-400
                |Cerrar
      // End of Topbar
      // Begin Page Content
      .container-fluid
        block contenido
        // /.container-fluid
        // End of Main Content
        // Footer
        footer.sticky-footer.bg-white
          .container.my-auto
            .copyright.text-center.my-auto
              span Darkweb &copy; Hermes 2020
        // End of Footer
        // End of Content Wrapper
// End of Page Wrapper
// Scroll to Top Button
a.scroll-to-top.rounded(href='#page-top')
  i.fas.fa-angle-up
// Logout Modal
#logoutModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title &iquest;Desea salir?
        button.close(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body Confirme cierre de sesi&oacute;n
      .modal-footer
        button.btn.btn-secondary(type='button' data-dismiss='modal') Cancelar
        a.btn.btn-primary(href='index.php') Salir
// Bootstrap core JavaScript
script(src='/vendor/jquery/jquery.min.js')
script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
// Core plugin JavaScript
script(src='/vendor/jquery-easing/jquery.easing.min.js')
// Custom scripts for all pages
script(src='/js/sb-admin-2.min.js')
// Page level plugins
script(src='/vendor/chart.js/Chart.min.js')
// Page level custom scripts
script(src='/js/demo/chart-area-demo.js')
script(src='/js/demo/chart-pie-demo.js')
